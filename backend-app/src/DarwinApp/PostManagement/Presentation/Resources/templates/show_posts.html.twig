{% extends '@shared/base.html.twig' %}

{% block content %}
    <h1>Darwin</h1>
    {% if posts is empty %}
        <div>
            <p>Looks like you don't have any posts yet...</p>
        </div>
    {% else %}
        {% for post in posts %}
            <div style="width: 40%;">
                <h4 style="text-align: center">{{ post.title }}</h4>
                <img style="width: 100%; border: 1px solid white; border-radius: 5px;" src="{{ asset('images/post_images/' ~ post.imageFileName) }}" alt="{{ post.imageFileName }}">
                <hr>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
